- if @post.favorited_by(current_user).present?
  = link_to post_favorite_path(@post.id, @post.favorited_by(current_user)), method: :DELETE, remote: true do
    いいね
    %i.fas.fa-heart.get-favorite
    = @post.favorites.length
- else
  = link_to post_favorites_path(@post), method: :POST, remote: true do
    いいね
    %i.fas.fa-heart.yet-favorite
    = @post.favorites.length
