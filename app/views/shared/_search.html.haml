%ul.search-wrapper
  %li.search-box
    .search-title
      キーワード検索
    .search-keyword
      = search_form_for(@q, url: searches_path, class: "keyword-search-form") do |f|
        = f.search_field :name_or_review_or_address_or_area_name_cont, placeholder: "例）岩盤浴", class: "keyword-field"
        = button_tag type: 'submit', class: "btn search-btn" do
          %i.fas.fa-search
  %li.search-box
    .search-title
      カテゴリー検索
    .search-category
      = search_form_for(@q, url: searches_path, class: "category-search-form") do |f|
        = f.collection_check_boxes :categories_id_in_any, @categories, :id, :name , class: "keyword-field" do |category|
          = category.label do
            = category.check_box
            = category.text
        = button_tag type: 'submit', class: "btn search-btn" do
          %i.fas.fa-search
